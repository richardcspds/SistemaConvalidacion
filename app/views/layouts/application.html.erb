<!DOCTYPE html>
<html>
  <head>
    <title>SisConv</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body 
    <% if content_for?(:body_attributes) %>
      <%= yield(:body_attributes) %> 
    <% end %>>


    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Sistema de Convalidación Academica</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/convalidacions/new">Realizar Convalidación</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ver<span class="caret"></span></a>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="/universidads">Universidades</a></li>
                <li><a href="/carreras">Carreras</a></li>
                <li><a href="/pensums">Pensums</a></li>
                <li><a href="/asignaturas">Asignaturas</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Crear<span class="caret"></span></a>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><a href="/universidads/new">Nueva Universidad</a></li>
                <li><a href="/carreras/new">Nueva Carrera</a></li>
                <li><a href="/pensums/new">Nuevo Pensum</a></li>
                <li><a href="/asignaturas/new">Nueva Asignatura</a></li>
                <li><a href="/relacions/new">Relación de Asignaturas</a></li>
              </ul>
            </li>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <p class="navbar-text pull-right">
                  <% if user_signed_in? %>
                    Registrado como: <strong><%= current_user.email %></strong>.
                    <%= link_to 'Editar Perfil', edit_user_registration_path, :class => 'navbar-link' %> |
                    <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                  <% else %>
                    <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
                    <%= link_to "Entrar", new_user_session_path, :class => 'navbar-link'  %>
                  <% end %>
                </p>
              </li>
            </ul>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>      
    </div>

    <footer>
      <div class="container">
        Glorious Software <%= Time.now.year %>
      </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>

  </body>
</html>
