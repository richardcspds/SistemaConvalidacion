<h1>Relacions</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Asignatura</th>
      <th>Asignatura Procedencia</th>
      <th>Universidad Procedencia</th>
      <th>Convalida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relacions.each do |relacion| %>
      <tr>
        <td><%= relacion.asignatura.nombre %></td>
        <td><%= relacion.asignatura.nombre %></td>
        <td><%= relacion.asignatura.pensum.carrera.universidad.nombre %></td>
        <td><%= relacion.convalida %></td>
        <td><%= link_to 'Show', relacion %></td>
        <td><%= link_to 'Edit', edit_relacion_path(relacion) %></td>
        <td><%= link_to 'Destroy', relacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relacion', new_relacion_path %>
