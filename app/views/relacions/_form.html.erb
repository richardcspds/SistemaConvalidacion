        </div>

        <div class="form-inline">
          <label for="asignatura_home_id">Asignatura</label>
          <%= form.grouped_collection_select :asignatura_home_id, Pensum.order(:nombre), :asignaturas, :nombre, :id,  :nombre , {:include_blank => true}, {:class => "form-control"} %>
