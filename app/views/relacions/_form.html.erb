                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  </button>
                </div><!-- /btn-group -->
              </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
          </div><!-- /.row -->
        </div>

        <div class="form-group">
          <label for="universidad_local_id">Universidad local</label>
          <%= form.collection_select :universidad_local_id, Universidad.all, :id, :nombre, {:include_blank => true}, {:class => "form-control"} %>
        </div>
    
        <div class="form-group">
          <label for="carrera_local_id">Carrera</label>
          <%= form.grouped_collection_select :carrera_local_id, Universidad.order(:nombre), :carreras, :nombre, :id,  :nombre , {:include_blank => true}, {:class => "form-control"} %>
        </div>

        <div class="form-group">
          <label for="pensum_local_id">Pensum</label>
