<h1>Carreras</h1>

<table id='carreras_table_id' class='table table-hover'>
  <thead id='carreras_table_head_id'>
    <tr>
      <th>Nombre</th>
      <th>Universidad</th>
      <th>Pensums</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id='carreras_table_body_id'>
    <% @carreras.each do |carrera| %>
      <tr>
        <td><%= carrera.nombre %></td>
        <td><%= carrera.universidad.nombre %></td>
        <td><button type="button" class="btn btn-primary">Ver Pensums</button></td>
        <td><%= link_to 'Show', carrera %></td>
        <td><%= link_to 'Edit', edit_carrera_path(carrera) %></td>
        <td><%= link_to 'Destroy', carrera, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

