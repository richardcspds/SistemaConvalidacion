<h1>Universidades</h1>

<br>

<%= search_form_for @search do |f| %>
  <div class="form-inline">
    <div class='field'>
      <%= f.label :nombre_cont, "Nombre contiene:" %>
      <%= f.text_field :nombre_cont, class: "form-control" %>
      <input class="btn btn-primary" type="submit" value="Buscar">
    </div>
  </div>
<% end %>

<br>

<table id='universidad_table' class="table table-hover" style="width:100%">
  <thead>
    <tr>
      <th><%= sort_link @search, :id, "ID" %></th>
      <th><%= sort_link @search, :nombre, "Nombre" %></th>
      <th><%= sort_link @search, :descripcion, "Descripcion" %></th>
      <th>Logo</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @universidads.each do |universidad| %>
      <tr>
        <th scope="row"><%= universidad.id %>
        <td><%= universidad.nombre %></td>
        <td><%= universidad.descripcion %></td>
        <td><%= image_tag universidad.logo_url, class: '.img-responsive .center-block img-rounded', style:'width:50px' if universidad.logo.present? %>
        <td><%= link_to 'Ver', universidad %></td>
        <td><%= link_to 'Editar', edit_universidad_path(universidad) %></td>
        <td><%= link_to 'Eliminar', universidad, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Universidad', new_universidad_path %>
