<br><br>
<p>
  <strong>Nombre:</strong>
  <%= @universidad.nombre %>
</p>

<p>
  <strong>Descripci칩n:</strong>
  <%= @universidad.descripcion %>
</p>

<p>
  <strong>Logo:</strong>
  <%= image_tag(@universidad.logo_url, width: 150) if @universidad.logo.present? %>
</p>

<div class="btn-group">
  <button type="button" id='ver_select_button_id' class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Ver <span class="caret"></span>
  </button>
  <ul id='ver_select_list_id' class="dropdown-menu">
    <li><a>Carreras</a></li>
    <li><a>Pensums</a></li>
    <li><a>Asignaturas</a></li>    
  </ul>
</div>


<%= link_to 'Editar', edit_universidad_path(@universidad) %> |
<%= link_to 'Volver', universidads_path %>

<div id='info_tables_id'>

  <div id='info_tables_carreras_id'>
    <h3>Carreras</h3>

    <table id='carreras_table_id' class='table table-hover'>
      <thead id='carreras_table_head_id'>
        <tr>
          <th>Nombre</th>
          <th>Universidad</th>
          <th>Pensums</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>

      <tbody id='carreras_table_body_id'>
        <% @universidad.carreras.each do |carrera| %>
          <tr>
            <td><%= carrera.nombre %></td>
            <td><%= carrera.universidad.nombre %></td>
            <td><button type="button" id='ver_pensums_button_id' class="btn btn-primary">Ver Pensums</button></td>
            <td><%= link_to 'Ver', carrera %></td>
            <td><%= link_to 'Editar', edit_carrera_path(carrera) %></td>
            <td><%= link_to 'Eliminar', carrera, method: :delete, data: { confirm: 'Est치s seguro?'} %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div id='info_tables_pensums_id'>
    <h3>Pensums</h3>

    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Universidad</th>
          <th>Carrera</th>
          <th>Nombre</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @universidad.pensums.each do |pensum| %>
          <tr>
            <td><%= pensum.carrera.universidad.nombre %></td>
            <td><%= pensum.carrera.nombre %></td>
            <td><%= pensum.nombre %></td>
            <td><%= pensum.date %></td>
            <td><%= link_to 'Ver', pensum %></td>
            <td><%= link_to 'Editar', edit_pensum_path(pensum) %></td>
            <td><%= link_to 'Eliminar', pensum, method: :delete, data: { confirm: 'Est치s seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>    
  </div>

  <div id='info_tables_asignaturas_id'>
    <h3>Asignaturas</h3>

    <table class='table table-hover'>
      <thead>
        <tr>
          <th>Clave</th>
          <th>Nombre</th>
          <th>Creditos</th>
          <th>Universidad</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @universidad.asignaturas.each do |asignatura| %>
          <tr>
            <td><%= asignatura.clave %></td>
            <td><%= asignatura.nombre %></td>
            <td><%= asignatura.creditos %></td>
            <td><%= asignatura.pensum.carrera.universidad.descripcion %> (<%= asignatura.pensum.carrera.universidad.nombre %>)</td>
            <td><%= link_to 'Ver', asignatura %></td>
            <td><%= link_to 'Editar', edit_asignatura_path(asignatura) %></td>
            <td><%= link_to 'Eliminar', asignatura, method: :delete, data: { confirm: 'Est치s seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  
  </div>

</div>