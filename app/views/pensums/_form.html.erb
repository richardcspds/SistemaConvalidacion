<%= form_with(model: pensum, local: true) do |form| %>
  <% if pensum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pensum.errors.count, "errores") %> encontrados por lo que no se pudo guardar Ã©ste pensum:</h2>

      <ul>
      <% pensum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: "form-control" %>
  </div>
  <br>
        
  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, :class => "form-control" %>
  </div>
  <br>

  <div class="field">
    <%= form.label :universidad_id %>
    <%= form.collection_select :universidad_id, Universidad.order(:nombre), :id, :nombre, {:include_blank => true}, {:class => "form-control"}  %>
  </div>
  <br>

  <div class="field">
    <%= form.label :carrera_id %>
    <%= form.grouped_collection_select :carrera_id, Universidad.order(:nombre), :carreras, :nombre, :id,  :nombre , {:include_blank => true}, {:class => "form-control"} %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit "Procesar Pensum", class: "btn btn-primary" %>
  </div>
<% end %>
