<h1>Pensums</h1>

<br>

<%= search_form_for @search do |f| %>
  <div class="form-inline">
    <div class='field'>
      <%= f.label :nombre_cont, "Nombre contiene:" %>
      <%= f.text_field :nombre_cont, class: "form-control" %>
      <input class="btn btn-primary" type="submit" value="Buscar">
    </div>
  </div>
<% end %>

<br>

<table class='table table-hover'>
  <thead>
    <tr>
      <th><%= sort_link @search, :universidad_id, "Universidad" %></th>
      <th><%= sort_link @search, :carrera_id, "Carrera" %></th>
      <th><%= sort_link @search, :nombre, "Nombre" %></th>
      <th><%= sort_link @search, :date, "Fecha" %></th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @pensums.each do |pensum| %>
      <tr>
        <td><%= pensum.carrera.universidad.nombre %></td>
        <td><%= pensum.carrera.nombre %></td>
        <td><%= pensum.nombre %></td>
        <td><%= pensum.date %></td>
        <td><%= link_to 'Ver', pensum %></td>
        <td><%= link_to 'Editar', edit_pensum_path(pensum) %></td>
        <td><%= link_to 'Borrar', pensum, method: :delete, data: { confirm: 'Â¿EstÃ¡ Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

