<h1>Pensums</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Universidad</th>
      <th>Carrera</th>
      <th>Nombre</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pensums.each do |pensum| %>
      <tr>
        <td><%= pensum.carrera.universidad.nombre %></td>
        <td><%= pensum.carrera.nombre %></td>
        <td><%= pensum.nombre %></td>
        <td><%= pensum.date %></td>
        <td><%= link_to 'Show', pensum %></td>
        <td><%= link_to 'Edit', edit_pensum_path(pensum) %></td>
        <td><%= link_to 'Destroy', pensum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

